<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MUConnect">

        <!-- Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MUConnect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Animated Splash -->
        <activity android:name=".auth.SplashActivity" android:exported="false" />

        <!-- Login -->
        <activity android:name=".auth.LoginActivity" android:exported="false" />

        <!-- Missing Activities (Causing Crash!) -->
        <activity android:name=".auth.RegisterActivity" android:exported="false" />
        <activity android:name=".auth.ForgotPasswordActivity" android:exported="false" />


    </application>

</manifest>
